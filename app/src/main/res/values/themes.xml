<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArchitectureExample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->

        <item name="android:background">@color/dark_blue_grey</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:actionBarStyle">@color/bg_semi_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:background</item>

        <!-- Standard font style -->
        <item name="android:textViewStyle">@style/Theme.StandardFont</item>

    </style>
</resources>


